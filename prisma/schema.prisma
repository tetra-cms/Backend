datasource db {
  provider = "postgres"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username     String   @unique
  email String
  password  String
  role Role @default(USER)
  createdAt DateTime @default(now())
  regIp     String
  lastLogin DateTime @updatedAt

  clients    Client[]  @relation("ClientRelation")
}

model Client {
  id Int @id @default(autoincrement())

  userId    Int 
  userOwner   User  @relation("ClientRelation", fields: [userId], references: [id])

  fcs String
  city String
  address String
  phone String
}

model Category {
  id Int @id @default(autoincrement())

  name String
  title String
  iconUrl String

  products    Product[]  @relation("CategoryRelation")
}

model Product {
  id Int @id @default(autoincrement())

  imageUrl String @default("products/no_image.png")
  name String
  description String
  price Int

  categoryId Int
  belongCategory Category @relation("CategoryRelation", fields: [categoryId], references: [id])
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}

model Pages {
  id Int @id @default(autoincrement())

  route String @unique
  title String
  content String
}